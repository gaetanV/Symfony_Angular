{
    "form": {
        "lock_form": {
            "entityField": {
                "Tools/Angular1Bundle/Entity/User": {
                    "groupe": "registration",
                    "fields": [
                        "username",
                        "password"
                    ]
                }
            },
            "extraField": {
                "custom": {
                    "Type": "String",
                    "NotBlank": true,
                    "Length": {
                        "min": 7,
                        "max": 10
                    }
                }
            }
            
        }
    },
    "services": {
        "getUser": {        
            "route": "/user/:id",
            "requirements": {
                "id": "\\d+"
            },
            "persistence": ["User"],
            "role": ["ROLE_USER"],
            "method": ["GET"],
            "response ": {
                "find" :{
                    "entity:" : "Tools/Angular1Bundle/Entity/User",
                    "param" : {"id":"id"}
                }
            }
        }
    }
}

                   
                  
           