<!DOCTYPE html>
<html data-ng-app="app" ng-strict-di>
    <head>
        <meta http-equiv="Content-Type" content="text/html"; charset=utf-8" />
        <title>{% block title %}Test Angular Symfony{% endblock %}</title>
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        {% block stylesheets %}
                    {% javascripts '@ToolsAngularBundle/Resources/public/js/angular.js'  '@ToolsAngularBundle/Resources/public/js/angular-route.js' %}
                           <script type="text/javascript" src="{{ asset_url }}"></script>
                    {% endjavascripts %}
        {% endblock %}
    </head>
    <body>
        
        <section id="wrapper">
                {% block body %}
                          {{ form(form) }} 
                {% endblock %}
        </section>

        {% block javascripts %}
            <script>
                (function() {
                    'use strict';
                    angular.module('app', [  'ngRoute']);
                })();
                </script>
               {% javascripts '@ToolsAngularBundle/Resources/public/js/directive/form/*' %}
                           <script type="text/javascript" src="{{ asset_url }}"></script>
                    {% endjavascripts %}
        {% endblock %}
        
        
        
    </body>
</html>